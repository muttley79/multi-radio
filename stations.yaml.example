shared:
  # Spotify credentials — only required if any station uses spotify_playlist_id.
  # Create an app at https://developer.spotify.com/dashboard and set the redirect URI there.
  spotify_client_id: "your_client_id"
  spotify_client_secret: "your_client_secret"
  spotify_redirect_uri: "http://127.0.0.1:8888/callback"

  # YouTube credentials — only required if any station uses youtube_playlist_id.
  # Create an OAuth 2.0 Desktop app at https://console.cloud.google.com and copy the values below.
  # youtube_client_id: "your_youtube_client_id"
  # youtube_client_secret: "your_youtube_client_secret"

  sample_duration: 25       # seconds of audio to sample per cycle
  poll_interval: 300        # seconds between cycles
  playlist_max_size: 100    # oldest tracks trimmed when exceeded
  playlist_mode: "normal"   # "normal" = newest on top, "reverse" = newest at bottom
  log_max_bytes: 5242880    # 5 MB per log file
  log_backup_count: 3
  # dashboard_enabled: true   # set false to disable the web dashboard (default: true)
  # dashboard_port: 3001      # port for the LAN dashboard

stations:
  - name: "station1"          # both Spotify and YouTube
    stream_url: "https://example.com/stream.m4a"
    spotify_playlist_id: "your_spotify_playlist_id"
    youtube_playlist_id: "PLxxxxxxxxxxxxxxxxxxxx"
    # skip_hours supports an optional day prefix before each time range:
    #   No prefix           → every day          "07:00-09:30"
    #   weekdays / weekends → Sun-Thu / Fri-Sat   "weekdays 07:00-09:30"
    #   Single day          →                     "fri 23:00-01:00"
    #   Day range           →                     "mon-fri 07:00-09:30"
    #   Wrapping day range  →                     "fri-mon 22:00-08:00"
    #   Multiple entries    →                     "mon-fri 07:00-09:30, sat 10:00-14:00"
    skip_hours: "mon-fri 07:00-09:30, sat 10:00-14:00"
    analytics: true           # record plays to the dashboard database (default: true)
    analytics_retention_days: 30  # days of history to keep for this station

  - name: "station2"          # Spotify only (existing behaviour)
    stream_url: "https://example.com/stream2.m4a"
    spotify_playlist_id: "your_other_spotify_playlist_id"
    skip_hours: "06:00-09:00,16:00-21:00"   # no prefix = every day (backward-compatible)
    analytics: true
    analytics_retention_days: 30

  - name: "station3"          # YouTube only
    stream_url: "https://example.com/stream3.m4a"
    youtube_playlist_id: "PLyyyyyyyyyyyyyyyyyyyy"
    analytics: false          # disable analytics for this station
